<div class="wrapper">
    {{> navbar }}
    <h2 class="center">Settings</h2>
    <div class="container my-dflex-col my-pt-4">
        <form class="row my-dflex-col">
            <img class="row" id="pfp" src="{{user.image}}">
            <label for="img">Select New Profile Picture:</label>
            <input type="file" id="img" name="img" accept="image/*">
        </form>
        <form class="updateForm row input-field my-align-center">
            <div>
                <label for="username">Username:</label>
                <input type="text" id="setUsername" name="username" value="{{user.username}}">
            </div>
            <div>
                <label for="first_name">First Name:</label>
                <input type="text" id="setFirstName" name="first_name" value="{{user.first_name}}">
            </div>
            <div>
                <label for="last_name">Last Name:</label>
                <input type="text" id="setLastName" name="last_name" value="{{user.last_name}}">
            </div>
            <div>
                <label for="status">Status:</label>
                <input type="text" id="setStatus" name="status" value="{{user.status}}">
            </div>
                <button class="btn btn-w waves-effect waves-light" id="updateBtn" type="submit">Update</button>
                <p class="green-text my-mt-4"></p>
        </form>
    </div>
    {{> aiIcon}}
</div>