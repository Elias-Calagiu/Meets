<div class="wrapper">
    {{> navbar}}

    <div class="row container my-dflex my-full-height">
        <div class="col s6">
            <h3 class="">Events</h3><hr>
            {{#if userEvents}}
            {{#each userEvents}}
            <a href="/events/{{dataValues.id}}" class="eventBtn my-tc-black">
                <div class="event-box my-bc2">
                    <div class="event-title font-scale">{{dataValues.name}}</div>
                    <p class="font-scale">{{dataValues.dateTime}}</p>
                </div>
            </a>
            {{/each}}
            {{else}}
            <h6>Add an event</h6>
            <a class="btn" href="/event/new">Add Event</a>
            {{/if}}
        </div>
        <div class="col s6 my-dflex-col my-justify-between align-center">
            <div class="row">
                <h3 class="">Connections {{friends.length}}</h3>
                <span></span>
                <hr>
                <div class="friends">
                    {{#if friends}}
                    {{#each friends}}
                    <a href="/friend/{{dataValues.id}}" class="friendsBtn my-tc-black">
                        <div class="friend-box my-dflex">
                            <img class="connectedUserIcon" src="{{dataValues.image}}" alt="user image">
                            <span class="font-scale">{{dataValues.first_name}} {{dataValues.last_name}}</span>
                        </div>
                    </a>
                    {{/each}}
                    {{/if}}
                    {{#unless friends}}
                    <h6>You have no connections</h6>
                    <section>
                        <a class="btn" href="/friends">find connection</a>
                    </section>
                    {{/unless}}
                </div>
            </div>
        </div>
        {{> aiIcon}}
    </div>
</div>