<script src="/assets/js/events.js"></script>
<div class="wrapper">
    {{> navbar }}
    <div class="container">
        {{#if isEvent}}
        <h1>One Event</h1>
        <form>
            <div class="checkboxes my-dflex my-justify-around">
                <label>
                    <input type="checkbox" value="true" />
                    <span>Public Event</span>
                </label>
                <label>
                    <input type="checkbox" value="true" />
                    <span>Indoor</span>
                </label>
            </div>
            <input type="text" name="name" id="name" placeholder="Name" />
            <input type="number" name="max_people" id="numOfPeople" placeholder="Max number of People" />
            <input type="text" name="location" id="location" placeholder="location" />
            <div class="input-field">
                <select id="category">
                    <option value="Causual" selected disabled>Pick a Category</option>
                    <option value="Causual">Causual</option>
                    <option value="Sporting">Sporting</option>
                    <option value="Music">Music</option>
                    <option value="Food">Food</option>
                    <option value="Party">Party</option>
                    <option value="Meeting">Meeting</option>
                    <option value="Online">Online</option>
                    <option value="Conference">Conference</option>
                    <option value="Family">Family</option>
                    <option value="Appointment">Appointment</option>
                </select>
            </div>
            <button class="btn right my-bc4">Save</button>
        </form>
        <div class="btns my-mt-4">
            <a class="btn" href=""> Delete </a>
            <a class="btn" href=""> Share </a>
        </div>
        {{else}}

        <h1>New Event</h1>
        <form class="newEvent">
            <div class="checkboxes my-dflex my-justify-around">
                <label>
                    <input type="checkbox" value="true" />
                    <span>Public Event</span>
                </label>
                <label>
                    <input type="checkbox" value="true" />
                    <span>Indoor</span>
                </label>
            </div>
            <input type="datetime-local" name="dateTime" id="dateTime">
            <input type="text" name="name" id="name" placeholder="Name" />
            <input type="number" name="max_people" id="numOfPeople" placeholder="Max number of People" />
            <input type="text" name="location" id="location" placeholder="location" />
            <div class="input-field">
                <select id="category">
                    <option value="Causual" selected disabled>Pick a Category</option>
                    <option value="Causual">Causual</option>
                    <option value="Sporting">Sporting</option>
                    <option value="Music">Music</option>
                    <option value="Food">Food</option>
                    <option value="Party">Party</option>
                    <option value="Meeting">Meeting</option>
                    <option value="Online">Online</option>
                    <option value="Conference">Conference</option>
                    <option value="Family">Family</option>
                    <option value="Appointment">Appointment</option>
                </select>
            </div>
            <button class="btn right my-bc4">Save</button>
        </form>
        <div class="btns my-mt-4">
            <a class="btn" href=""> Share </a>
        </div>

        {{/if}}


    </div>
</div>